{
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script",
    "ecmaFeatures": {}
  },
  "parser": "esprima",
  "rules": {
    "semi": "off",
    "no-shadow-restricted-names": "error",
    "no-use-before-define": "error",
    "no-unused-vars": "error",
    "comma-spacing": "error",
    "camelcase": "warn",
    "indent": ["error", 2],
    "no-undef": "error",
    "no-global-assign": "error"
  },
  "env": {
    "browser": true,
  }
}
